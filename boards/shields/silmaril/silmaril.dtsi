#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;  
        rows = <4>;    

        
        map = < 
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6)     RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12)  RC(0,13)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6)     RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12)  RC(1,13)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                     RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12)  RC(2,13)
                                            RC(3,4) RC(3,5) RC(3,6)     RC(3,7) RC(3,8) RC(3,9)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";
        
        col-gpios = <&pro_micro 17 GPIO_ACTIVE_HIGH>,  // D2 / P0.17 - col1
                    <&pro_micro 20 GPIO_ACTIVE_HIGH>,  // D3 / P0.20 - col2
                    <&pro_micro 22 GPIO_ACTIVE_HIGH>,  // D4 / P0.22 - col3
                    <&pro_micro 24 GPIO_ACTIVE_HIGH>,  // D5 / P0.24 - col4
                    <&pro_micro 100 GPIO_ACTIVE_HIGH>, // D6 / P1.00 - col5
                    <&pro_micro 11 GPIO_ACTIVE_HIGH>,  // D7 / P0.11 - col6
                    <&pro_micro 104 GPIO_ACTIVE_HIGH>; // D8 / P1.04 - col7


    };
};